<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pranav.playmusic.Player">

    <SeekBar
        android:id="@+id/sbSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="139dp"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_alignTop="@+id/sbSong"
        android:layout_toStartOf="@+id/btnPause"
        android:src="@drawable/p"/>

    <ImageView
        android:id="@+id/btnPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnPrev"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pause"/>

    <ImageView
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnPause"
        android:layout_toEndOf="@+id/btnPause"
        android:src="@drawable/n"
        android:layout_alignTop="@+id/btnPause" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/tvSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/btnPrev"
        android:layout_marginBottom="37dp"
        />

    <ImageView
        android:id="@+id/musicImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>
